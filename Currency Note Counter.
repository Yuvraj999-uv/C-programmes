#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
   int n;
   scanf("%d",&n);
   if(n>=500){
       
     printf("500: %d\n",n/500);
         n=n%500;
    }
  if(n>=100){
       
     printf("100: %d\n",n/100);
         n=n%100;
    }
     if(n>=50){
       
     printf("50: %d\n",n/50);
         n=n%50;
    }
     if(n>=20){
       
     printf("20: %d\n",n/20);
         n=n%20;
    }
     if(n>=10){
       
     printf("10: %d\n",n/10);
         n=n%10;
    }
    if(n>=5){
       
     printf("5: %d\n",n/5);
         n=n%5;
    }
    if(n>=2){
       
     printf("2: %d\n",n/2);
         n=n%2;
    }
    if(n>=1){
       
     printf("1: %d",n/1);
         
    }
    
    return 0;
}
